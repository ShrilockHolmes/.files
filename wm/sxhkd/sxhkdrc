super + x
  alacritty

super + d 
  rofi -show drun

super + period 
  rofi -modi emoji -show emoji

@XF86Calculator
  rofi -modi calc -show calc 

super + v 
  rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

super + shift + c
	 killall sxhkd && notify-send 'reloaded sxhkd' && sxhkd & 

super + {_,shift + }q
	bspc node -{c,k}

super + shift + r
  bspc wm -r
# media keys 
XF86AudioRaiseVolume 
  bash ~/.config/i3/scripts/audio.sh up
XF86AudioLowerVolume 
  bash ~/.config/i3/scripts/audio.sh down 
XF86AudioMute
  ~/.config/i3/scripts/audio.sh mute
XF86AudioMicMute 
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86MonBrightnessDown 
  bash ~/.config/i3/scripts/brightness.sh down
XF86MonBrightnessUp 
  bash ~/.config/i3/scripts/brightness.sh up

super + shift + p
  ~/.config/i3/scripts/power.sh

super + ctrl + c 
   pkill greenclip && greenclip clear && greenclip daemon &


@Print
  ~/.config/i3/scripts/screenshot.sh


XF86AudioPrev
  playerctl previous

XF86AudioNext 
  playerctl next

XF86AudioPlay 
  playerctl play-pause

super + e 
  nemo


# window manaager only!!
super + shift + space
  bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

super + {h,j,k,l}
 	bspc node -f {west,south,north,east}

super + shift + {1-4}
  bspc node --to-desktop} ^{1-4} --focus


super + f
  bspc node focused.tiled -t fullscreen || bspc node focused.fullscreen -t tiled
# # Swap window with direction
super + shift + {h,j,k,l}
  bspc node -s {west,south,north,east}

super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Cycle through desktops
super + alt + {Left, Right}
  crystal --focus {prev, next}


super + r : {h,j,k,l}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

super + r : {Left,Down,Up,Right}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left +$STEP 0,bottom 0 +$STEP,top 0 +$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right +$STEP 0,top 0 $STEP,bottom 0 +$STEP,left $STEP 0" | cut -d',' -f$SELECTION)
#
# # Move a floating window
super + {Left,Right,Up,Down}
  xdo move {-x -20, -x +20, -y -20, -y +20}


alt + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}

alt + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
